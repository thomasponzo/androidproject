<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    >

    <ImageView
        android:id="@+id/table"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/drawntable" />

    <TextView
        android:id="@+id/tablenumber"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:paddingBottom="40dp"
        android:text="23"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/person"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/table"
        android:scaleType="centerInside"
        android:src="@drawable/drawnperson" />

    <TextView
        android:id="@+id/personnumber"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/table"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="8"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/person"
        android:scaleType="centerCrop"
        android:src="@drawable/drawnclock" />

    <TextView
        android:id="@+id/clocktime"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/personnumber"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="17:30"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/clock"
        android:src="@drawable/drawncalendar" />

    <TextView
        android:id="@+id/date"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/clocktime"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="23/122018"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/reservationname"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phonenumbertext"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/person"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:text="resevering: ABATEGIOVANNI"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/view2"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_phone" />

    <TextView
        android:id="@+id/phonenumbertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/clock"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:text="06-26032565"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonreservationorder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="Besteling"
        android:textSize="10sp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black" />


</RelativeLayout>